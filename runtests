#!/bin/bash
set -e

# standard tests
coverage run runtests.py --parallel \
  || coverage run ./runtests.py
# tests the extension capability
SAMPLE_APP=1 coverage run ./runtests.py \
  --parallel --exclude-tag=selenium_tests \
  || SAMPLE_APP=1 coverage run ./runtests.py \
  --exclude-tag=selenium_tests
coverage combine
coverage xml
